{
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules",
    "lifecycle": {
      "rule": [
        {
          "action": {
            "type": "Delete"
          },
          "condition": {
            "age": 7,
            "matchesPrefix": ["raw-videos/"]
          }
        },
        {
          "action": {
            "type": "AbortIncompleteMultipartUpload"
          },
          "condition": {
            "age": 1
          }
        }
      ]
    }
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8180
    },
    "storage": {
      "port": 9199
    }
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  }
}
